<main>
  <div class="container">
    <div class="row my-2">
      <div>
        <h4>新規登録</h4>
      </div>
    </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%= render "public/shared/error_messages", resource: resource %>
    <div class="row mb-1">
      <div class="col">
        <%= f.label :名前 %>
      </div>
      <div class="col">
        <p>（姓）</p><%= f.text_field :last_name, autocomplete: "last_name" %>
      </div>
      <div class="col">
        <p>（名）</p><%= f.text_field :first_name, autocomplete: "first_name" %>
      </div>
    </div>

    <div class="row mb-1">
      <div class="col">
        <%= f.label :フリガナ %>
      </div>
      <div class="col">
        <p>（セイ）</p><%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
      </div>
      <div class="col">
        <p>（メイ）</p><%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
      </div>
    </div>

    <div class="row mb-1">
      <div class="col">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row mb-1">
      <div class="col">
        <%= f.label :郵便番号（ハイフンなし） %>
      </div>
      <div class="col">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>
    </div>

    <div class="row mb-1">
      <div class="col">
        <%= f.label :住所 %>
      </div>
      <div class="col-lg-6">
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>
    </div>

    <div class="row mb-1">
      <div class="col">
        <%= f.label :電話番号（ハイフンなし） %>
      </div>
      <div class="col">
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
      </div>
    </div>

    <div class="row mb-1">
      <div class="col">
        <%= f.label :パスワード（６文字以上） %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      </div>
      <div class="col">
        <%= f.password_field :encrypted_password, autocomplete: "new-password" %>
      </div>
    </div>

   <div class="row mb-2">
      <div class="col">
        <%= f.label :パスワード（確認用） %>
      </div>
      <div class="col">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row mb-1 justify-content-center">
      <div class="col-lg-2" >
        <%= f.submit "新規登録" %>
      </div>
    </div>
  <% end %>
  </div>

  <div class="container">
    <div class="row">
      <h4>既に登録済みの方</h4>
    </div>
    <div class="row">
      <div class="col-lg-6 justify-content-center">
        <p>
          <%= link_to "こちら", customer_session_path %>
          からログインして下さい</p>
      </div>
    </div>
  </div>
</main>

