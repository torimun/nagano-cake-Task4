<main>
  <div class="container">
    <div class="row my-3">
      <h5>ログイン</h5>
    </div>

    <div class="row my-2">
      <p>会員の方はこちらからログイン</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row justify-content-center">
      <div class="col-lg-3">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col-lg-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-3">
        <%= f.label :パスワード %>
      </div>
      <div class="col-lg-5" %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

    <div class="row my-3 justify-content-center">
      <div class="col-lg-3">
        <%= f.submit "ログイン" %>
      </div>
    </div>

    <% end %>
  </div>

  <div class="container">
    <div class="row">
      <h5>会員登録がお済でない方</h5>
    </div>
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <p>
          <%= link_to "こちら", new_customer_registration_path %>
          からログインして下さい</p>
      </div>
    </div>
  </div>
</main>


</main>