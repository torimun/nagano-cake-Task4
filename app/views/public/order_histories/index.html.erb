<main>
  <div class="container">
    <div class="row my-5">
      <div class="col-lg-3">
        <h4>注文履歴一覧</h4>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-lg-10 jstifuy-content-center">
        <table width="100%">
          <thead>
            <th class="border p-2"  width="20%">注文日</th>
            <th class="border p-2"  width="40%">配送先</th>
            <th class="border p-2"  width="15%">注文商品</th>
            <th class="border p-2"  width="10%">支払金額</th>
            <th class="border p-2"  width="15%">注文詳細</th>
          </thead>
          <tbody>
            <% @order_history.each do |order|%>
              <tr>
                <td class="border" width="20%">
                  <%= order.created_at.strftime('%Y/%m/%d') %>
                </td>
                <td class="border" width="40%">
                  <%= order.postal_code %></br>
                  <%= order.address %></br>
                  <%= order.address_name %>
                </td>
                <td class="border" width="15%">
                  <% order.order_details.each do |detail|%>
                    <%= detail.item.name %></br>
                  <% end%>
                </td>
                <td class="border" width="10%">
                  <%= order.payment_amount %>円
                </td>
                <td class="border" width="15%">
                  <%= link_to "表示する", public_order_histories_show_path(order.id), class: "btn btn-primary" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-lg-4">
        <%= paginate @order_history %>
      </div>
    </div>
  </div>
</main>