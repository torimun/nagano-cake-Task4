<main>
  <div class="container">
    <div class="row my-3">
      <div class="col-lg-3">
        <h4>注文情報入力</h4>
      </div>
    </div>

    <div class="row">
      <strong>支払い方法</strong>
    </div>
    <%= form_with model: @order_history, url: public_order_histories_confirm_path, method: :post  do |f| %>
    <div class="row">
      <%= f.radio_button :method_of_payment, OrderHistory.method_of_payments.key(0), checked: true %>
      <%= f.label :method_of_payment_credit_card, OrderHistory.method_of_payments_i18n[:credit_card] %>
    </div>
    <div class="row">
      <%= f.radio_button :method_of_payment, OrderHistory.method_of_payments.key(1) %>
      <%= f.label :method_of_payment_transfer, OrderHistory.method_of_payments_i18n[:transfer]%>
    </div>

    <div class="row">
      <strong>お届け先</strong>
    </div>

    <div class="row">
      <div class="col-lg-9">
        <p>〒<%= @customer.postal_code %> <%= @customer.address %></br>
        <%= @customer.full_name %><p>
      </div>
    </div>

    <div class="row mt-5 justify-content-center">
      <div class="col-lg-3">
        <%= f.submit "確認画面に進む", class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>

  </div>
</main>